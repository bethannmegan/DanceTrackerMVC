@model LessonsWorkshopsViewModel
@using DanceTrackerDataAccess.Models

@{
    string pageType = Model.CurrentLesson.EventId > 0 ? "Update Lesson" : "Create Lesson";

    ViewData["Title"] = $"Dance Tracker | {pageType}";
}

<form action="~/LessonsWorkshops/Index" method="post">
    <div>
        <div class="row">
            <div class="col-6 offset-3 text-center">
                <h1 class="display-4" style="margin: 20px 0px;">@pageType</h1>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Event Date</label>
                <input type="text" class="form-control" name="eventDate" value="@Model.CurrentLesson.EventDate" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Event Name</label>
                <input type="text" class="form-control" name="eventName" value="@Model.CurrentLesson.EventName" />
            </div>
        </div>
        <div class="form-row">
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Private Lessons</label>
                <input type="text" class="form-control" name="privateLessons" value="@Model.CurrentLesson.PrivateLessons" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Workshops</label>
                <input type="text" class="form-control" name="workshops" value="@Model.CurrentLesson.Workshops" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Videos</label>
                <input type="text" class="form-control" name="videos" value="@Model.CurrentLesson.Videos" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3">
                <button type="button" class="btn btn-secondary" onclick="location.href = '/LessonsWorkshops/Index'">CANCEL</button>
                <button type="submit" class="btn btn-primary">SAVE LESSON</button>
            </div>
        </div>
    </div>
    <input type="hidden" name="eventId" value="@Model.CurrentLesson.EventId" />
</form>
