@model EventsViewModel
@using DanceTrackerDataAccess.Models;

@{
    ViewData["Title"] = "Dance Tracker || Events";
}

<script type="text/javascript">
    function openLocation(url) {
        window.location.href = url;
    }

    function confirmDelete(id) {
        $("#hdnDeleteEventId").val(id);
        $("#deleteModal").modal("show");
    }

    function cancelDelete() {
        $("#hdnDeleteEventId").val(0);
        $("#deleteModal").modal("hide");
    }

    function deleteEvent() {
        var id = $("#hdnDeleteEventId").val();
        window.location.href = "/Events/Delete/" + id;
    }
</script>

<input type="hidden" id="hdnDeleteEventId" value="0" />

<div class="text-center">
    @if (!String.IsNullOrEmpty(Model.ActionMessage))
    {
        string colorClass = Model.IsActionSuccess ? "alert-success" : "alert-danger";

        <div class="alert @colorClass alert-dismissible fade show" role="alert">
            <strong>@Model.ActionMessage</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <h1 class="display-4">Events</h1>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <tr>
                    <th>Event Date</th>
                    <th>Event Name</th>
                    <th>Event Location</th>
                    <th>Competitions</th>
                    <th>Lessons and Workshops</th>
                    <th colspan="2"><button type="button" onclick="javascript:openLocation('/Events/Update/0')" class="btn btn-success btn-sm">ADD NEW EVENT</button></th>
                </tr>

                @foreach (Events eventEntry in Model.EventList)
                {
                    <tr>
                        <td>@eventEntry.EventDate</td>
                        <td>@eventEntry.EventName</td>
                        <td>@eventEntry.EventLocation</td>
                        <td>@eventEntry.Competitions</td>
                        <td>@eventEntry.LessonsAndWorkshops</td>
                        <td><button type="button" onclick="javascript:openLocation('/Events/Update/@eventEntry.EventId')" class="btn btn-secondary btn-sm">EDIT</button></td>
                        <td><button type="button" onclick="javascript:confirmDelete(@eventEntry.EventId)" class="btn btn-danger btn-sm">DELETE</button></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CONFIRM DELETE</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this entry?</p>
                <button type="button" onclick="javascript:cancelDelete()" class="btn btn-secondary btn-sm">CANCEL</button>
                <button type="button" onclick="javascript:deleteEvent()" class="btn btn-danger btn-sm">DELETE</button>
            </div>
        </div>
    </div>
</div>